<?php

  require __DIR__ . '/../vendor/autoload.php';

  use Symfony\Component\Console\Application;

  $application = new Application('Shade', ActiveCollab\Shade::VERSION);

  $application->add(new ActiveCollab\Shade\Command\BooksCommand());
  $application->add(new ActiveCollab\Shade\Command\BookCommand());
  $application->add(new ActiveCollab\Shade\Command\CommonQuestionsCommand());
  $application->add(new ActiveCollab\Shade\Command\VideosCommand());
  $application->add(new ActiveCollab\Shade\Command\WhatsNewArticlesCommand());
  $application->add(new ActiveCollab\Shade\Command\ReleasesCommand());
  $application->add(new ActiveCollab\Shade\Command\ProjectCommand());
  $application->add(new ActiveCollab\Shade\Command\BuildCommand());
  $application->add(new ActiveCollab\Shade\Command\UpdateCommand());
  $application->add(new ActiveCollab\Shade\Command\PluginsCommand());
  $application->add(new ActiveCollab\Shade\Command\TodoCommand());

  $application->run();